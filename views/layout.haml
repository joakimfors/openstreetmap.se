<!DOCTYPE html>
%html(lang="sv")
  %head
    %meta(charset="utf-8")
    - if @description
      %meta(name="description" content=@description)
    - if @keywords
      %meta(name="keywords" content=@keywords)
    %title= @title
    <!--[if ! lte IE 6]><!-->
    %link(href="#{path_to('/css/master.css')}" media="screen" rel="stylesheet")
    %link(href="#{path_to('/css/coderay.css')}" media="screen" rel="stylesheet")
    %link(href="#{path_to('/leaflet-0.7.7/leaflet.css')}" media="screen" rel="stylesheet")
    %script(src="/js/jquery-2.2.3.min.js")
    %script(src="/leaflet-0.7.7/leaflet.js")
    %script(src="/js/leaflet-hash.js")
    %script(src="/js/utils.js")
    - local_stylesheet_link_tag('local')
    <!--<![endif]-->
    /[if lte IE 6]
      %link(rel="stylesheet" href="http://universal-ie6-css.googlecode.com/files/ie6.1.1.css" media="screen, projection")
    /[if lt IE 9]
      %script(src="//html5shim.googlecode.com/svn/trunk/html5.js")
    %link(href="#{path_to('/articles.xml')}" rel="alternate" type="application/atom+xml")
    = haml :analytics, :layout => false
  %body
    #container
      #header.wrapper
        = haml :header, :layout => false
      #main.wrapper
        = yield
      #footer.wrapper
        = haml :footer, :layout => false
